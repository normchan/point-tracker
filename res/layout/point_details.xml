<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/relativeLayout1">
        <TextView android:text="TextView" android:id="@+id/weekOfValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:paddingLeft="5dp"></TextView>
        <TextView android:layout_height="wrap_content" android:text="@string/week_of" android:id="@+id/weekOfLabel" android:layout_width="wrap_content" android:layout_toLeftOf="@+id/weekOfValue"></TextView>
        <TextView android:layout_height="wrap_content" android:text="TextView" android:layout_width="wrap_content" android:id="@+id/childNameValue"></TextView>
        <ListView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/detailsGrid" android:layout_below="@id/childNameValue" android:isScrollContainer="true"></ListView>
    </RelativeLayout>
</LinearLayout>
